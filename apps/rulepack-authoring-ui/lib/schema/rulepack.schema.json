{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroengine.dev/schemas/rulepack.schema.json",
  "title": "Interpretation Rulepack",
  "type": "object",
  "required": ["version", "rules"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "metadata": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": true
    },
    "profiles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/interpretationRule"
      }
    }
  },
  "definitions": {
    "interpretationRule": {
      "type": "object",
      "required": ["id", "scope", "if", "then"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "scope": {
          "type": "string",
          "enum": [
            "synastry",
            "composite",
            "transit",
            "natal"
          ]
        },
        "min_severity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "if": {
          "type": "object",
          "properties": {
            "bodies": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1,
              "maxItems": 3
            },
            "aspect": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "profile": {
              "type": "string"
            }
          },
          "additionalProperties": true
        },
        "then": {
          "type": "object",
          "required": ["summary"],
          "properties": {
            "summary": {
              "type": "string",
              "minLength": 1
            },
            "details": {
              "type": "string"
            },
            "severity": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
