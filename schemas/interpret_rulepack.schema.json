{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroengine.example/schemas/interpret-rulepack.json",
  "title": "AstroEngine Relationship Rulepack",
  "type": "object",
  "required": ["rules"],
  "properties": {
    "rulepack": {"type": "string", "minLength": 1},
    "version": {"type": "integer", "minimum": 1},
    "meta": {
      "type": "object",
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "name": {"type": "string", "minLength": 1},
        "title": {"type": "string", "minLength": 1},
        "description": {"type": "string"},
        "author": {"type": "string"},
        "version": {"type": "integer", "minimum": 1},
        "mutable": {"type": "boolean"}
      },
      "additionalProperties": true
    },
    "profiles": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "base_multiplier": {"type": "number"},
          "tags": {
            "type": "object",
            "additionalProperties": {"type": "number"}
          },
          "tag_weights": {
            "type": "object",
            "additionalProperties": {"type": "number"}
          },
          "rule_weights": {
            "type": "object",
            "additionalProperties": {"type": "number"}
          }
        },
        "additionalProperties": false
      }
    },
    "archetypes": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {"type": "string"}
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["id", "scope", "when", "then"],
            "properties": {
              "id": {"type": "string", "minLength": 1},
              "scope": {"enum": ["synastry", "composite", "davison"]},
              "when": {
                "type": "object",
                "properties": {
                  "bodiesA": {
                    "oneOf": [
                      {"type": "string", "enum": ["*"]},
                      {
                        "type": "array",
                        "items": {"type": "string"},
                        "minItems": 1
                      }
                    ]
                  },
                  "bodiesB": {
                    "oneOf": [
                      {"type": "string", "enum": ["*"]},
                      {
                        "type": "array",
                        "items": {"type": "string"},
                        "minItems": 1
                      }
                    ]
                  },
                  "aspects": {
                    "oneOf": [
                      {"type": "string", "enum": ["*"]},
                      {
                        "type": "array",
                        "items": {"type": "number"},
                        "minItems": 1
                      }
                    ]
                  },
                  "min_severity": {"type": "number", "minimum": 0, "maximum": 1}
                },
                "additionalProperties": true
              },
              "then": {
                "type": "object",
                "required": ["title", "tags"],
                "properties": {
                  "title": {"type": "string", "minLength": 1},
                  "tags": {
                    "type": "array",
                    "items": {"type": "string"},
                    "minItems": 1
                  },
                  "base_score": {"type": "number", "minimum": 0, "maximum": 1},
                  "score_fn": {"type": "string"},
                  "markdown_template": {"type": "string"}
                },
                "additionalProperties": true
              }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "required": ["id", "scope", "title", "text"],
            "properties": {
              "id": {"type": "string", "minLength": 1},
              "scope": {"enum": ["synastry", "composite", "davison"]},
              "title": {"type": "string", "minLength": 1},
              "text": {"type": "string"},
              "score": {"type": "number"},
              "tags": {
                "type": "array",
                "items": {"type": "string"}
              },
              "when": {
                "type": "object",
                "properties": {
                  "bodies": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "aspect_in": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "min_severity": {"type": "number", "minimum": 0}
                },
                "additionalProperties": true
              }
            },
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "additionalProperties": false
}
