{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroengine.example/schemas/interpret-rulepack.json",
  "title": "AstroEngine Relationship Rulepack",
  "type": "object",
  "required": ["rules"],
  "properties": {
    "rulepack": {"type": "string", "minLength": 1},
    "version": {"type": "integer", "minimum": 1},

    "meta": {"type": "object"},

    "profiles": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "base_multiplier": {"type": "number"},
          "tags": {
            "type": "object",
            "additionalProperties": {"type": "number"}
          },
          "tag_weights": {
            "type": "object",
            "additionalProperties": {"type": "number"}
          },
          "rule_weights": {
            "type": "object",
            "additionalProperties": {"type": "number"}
          },
          "tags": {
            "type": "object",
            "additionalProperties": {"type": "number"}
          }
        },
        "additionalProperties": true
      }
    },
    "archetypes": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {"type": "string"}
      }
    },
    "archetypes": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {"type": "string"}
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {

        "type": "object",
        "required": ["id", "scope", "when"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "scope": {"enum": ["synastry", "composite", "davison"]},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "text": {"type": ["string", "null"]},
          "score": {"type": "number"},
          "tags": {
            "type": "array",
            "items": {"type": "string"}
          },
          "when": {

            "type": "object",
            "required": ["id", "scope", "when", "then"],
            "properties": {
              "id": {"type": "string", "minLength": 1},
              "scope": {"enum": ["synastry", "composite", "davison"]},
              "when": {
                "type": "object",
                "properties": {
                  "bodiesA": {
                    "oneOf": [
                      {"type": "string", "enum": ["*"]},
                      {
                        "type": "array",
                        "items": {"type": "string"},
                        "minItems": 1
                      }
                    ]
                  },
                  "bodiesB": {
                    "oneOf": [
                      {"type": "string", "enum": ["*"]},
                      {
                        "type": "array",
                        "items": {"type": "string"},
                        "minItems": 1
                      }
                    ]
                  },
                  "aspects": {
                    "oneOf": [
                      {"type": "string", "enum": ["*"]},
                      {
                        "type": "array",
                        "items": {"type": "number"},
                        "minItems": 1
                      }
                    ]
                  },
                  "min_severity": {"type": "number", "minimum": 0, "maximum": 1}
                },
                "additionalProperties": true
              },

              "bodiesA": {
                "oneOf": [
                  {"type": "array", "items": {"type": "string"}},
                  {"const": "*"}
                ]
              },
              "bodiesB": {
                "oneOf": [
                  {"type": "array", "items": {"type": "string"}},
                  {"const": "*"}
                ]
              },
              "aspect_in": {
                "type": "array",
                "items": {"type": "string"}
              },
              "aspects": {
                "oneOf": [
                  {"type": "array", "items": {"type": "number"}},
                  {"const": "*"}
                ]
              },
              "min_severity": {"type": "number", "minimum": 0},
              "longitude_ranges": {
                "type": "array",
                "items": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2,
                  "items": {"type": "number"}
                }
              }
            },
            "additionalProperties": true
          },
          "then": {
            "type": "object",
            "required": ["title", "tags"],
            "properties": {
              "title": {"type": "string"},
              "tags": {
                "type": "array",
                "items": {"type": "string"}
              },
              "base_score": {"type": "number"},
              "score_fn": {"type": "string"},
              "markdown_template": {"type": ["string", "null"]}
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true

      }
    }
  },
  "additionalProperties": true
}
