{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astroengine.example/schemas/interpret-rulepack.json",
  "title": "AstroEngine Relationship Rulepack",
  "type": "object",
  "required": ["meta", "rules"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["id", "name", "title"],
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "name": {"type": "string", "minLength": 1},
        "title": {"type": "string", "minLength": 1},
        "description": {"type": "string"},
        "version": {"type": "integer", "minimum": 1},
        "mutable": {"type": "boolean"}
      },
      "additionalProperties": false
    },
    "profiles": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "base_multiplier": {"type": "number", "minimum": 0},
          "tag_weights": {
            "type": "object",
            "additionalProperties": {"type": "number"}
          },
          "rule_weights": {
            "type": "object",
            "additionalProperties": {"type": "number"}
          }
        },
        "additionalProperties": false
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "scope", "title", "text"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "scope": {"enum": ["synastry", "composite", "davison"]},
          "title": {"type": "string", "minLength": 1},
          "description": {"type": "string"},
          "text": {"type": "string"},
          "score": {"type": "number"},
          "tags": {
            "type": "array",
            "items": {"type": "string"},
            "uniqueItems": false
          },
          "when": {
            "type": "object",
            "properties": {
              "bodies": {
                "type": "array",
                "items": {"type": "string"}
              },
              "aspect_in": {
                "type": "array",
                "items": {"type": "string"}
              },
              "min_severity": {"type": "number", "minimum": 0},
              "longitude_ranges": {
                "type": "array",
                "items": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 2,
                  "items": {"type": "number"}
                }
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
