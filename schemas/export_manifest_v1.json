{
  "$id": "https://astro.engine/schemas/export_manifest_v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AstroEngine Export Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "generated_at",
    "outputs"
  ],
  "properties": {
    "schema": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "version"
      ],
      "properties": {
        "id": {
          "type": "string",
          "const": "astroengine.export.manifest"
        },
        "version": {
          "type": "string",
          "pattern": "^v1\\.0\\.[0-9]+$"
        }
      }
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "profile_ids": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "default": []
    },
    "natal_ids": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "default": []
    },
    "scan_window": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "start",
            "end"
          ],
          "properties": {
            "start": {
              "type": [
                "string",
                "null"
              ]
            },
            "end": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        }
      ]
    },
    "outputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "format",
          "path",
          "bytes",
          "checksum"
        ],
        "properties": {
          "format": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "bytes": {
            "type": "integer",
            "minimum": 0
          },
          "rows": {
            "type": "integer",
            "minimum": 0
          },
          "checksum": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "sha256"
            ],
            "properties": {
              "sha256": {
                "type": "string",
                "pattern": "^[0-9a-f]{64}$"
              }
            }
          },
          "files": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "path",
                "bytes",
                "sha256"
              ],
              "properties": {
                "path": {
                  "type": "string"
                },
                "bytes": {
                  "type": "integer",
                  "minimum": 0
                },
                "sha256": {
                  "type": "string",
                  "pattern": "^[0-9a-f]{64}$"
                }
              }
            }
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "default": {},
      "additionalProperties": true
    }
  }
}
